public class Account {
    private double balance;

    // Constructor
    public Account(double initialBalance) {
        if (initialBalance > 0.0) {
            this.balance = initialBalance;
        } else {
            this.balance = 0.0;
        }
    }

    // Method to credit (deposit) an amount to the account
    public void credit(double amount) {
        if (amount > 0.0) {
            balance += amount;
        }
    }

    // Method to debit (withdraw) an amount from the account
    public void debit(double amount) {
        if (amount > balance) {
            System.out.println("Debit amount exceeded account balance.");
        } else {
            balance -= amount;
        }
    }

    // Method to get the current balance
    public double getBalance() {
        return balance;
    }
}

public class AccountTest {
    public static void main(String[] args) {
        // Create two Account objects
        Account account1 = new Account(50.00);
        Account account2 = new Account(0.00);

        // Display initial balances
        System.out.printf("Account1 balance: $%.2f%n", account1.getBalance());
        System.out.printf("Account2 balance: $%.2f%n", account2.getBalance());

        // Test debit method
        System.out.println("\nAttempting to debit $30.00 from Account1...");
        account1.debit(30.00);
        System.out.printf("Account1 balance: $%.2f%n", account1.getBalance());

        System.out.println("\nAttempting to debit $80.00 from Account1...");
        account1.debit(80.00);
        System.out.printf("Account1 balance: $%.2f%n", account1.getBalance());

        System.out.println("\nAttempting to debit $10.00 from Account2...");
        account2.debit(10.00);
        System.out.printf("Account2 balance: $%.2f%n", account2.getBalance());
    }
}
